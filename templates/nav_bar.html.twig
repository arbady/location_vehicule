                        </ul>
                    </div>
                </div>
            </li><br>
        </ul>
        <hr id="ligne" class="deep-purple accent-2 mb-8 mt-0 d-inline-block mx-auto">
    </div>
</div>

<script>

    /*<!--fonction pour le menu principal-->*/
    $('.chars').on('click',function(){
        $('.menu').toggleClass('close')
    });

    <!--fonction pour le menu accordion-->
    $(function() {
        $("#expand").on( "click", function() {
            // $(this).next().slideToggle(200);
            $expand = $(this).find(">:first-child");

            if($expand.text() == "+") {
                $expand.text("-");
            } else {
                $expand.text("+");
            }
        });
    });
</script>
</body>
</html>
