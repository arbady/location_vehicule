    <!------ Search bar ------>
    <form class="container" action="/action_page.php" style="margin-left:-119%;">
        <div class="d-flex justify-content-center h-100">
            <div class="searchbar">
                <input class="search_input" type="text" name="" placeholder="Catégorie, Marque ou Modèle" style="font-size: 14px;">
