        </div>
    </form>
    <!-- End Search bar-->

    <!---- Différentes rubriques ---->
    <div class="texte1">
        <hr id="ligne" class="deep-purple accent-2 mb-8 mt-0 d-inline-block mx-auto">
        <ul class="sidebar-nav">
            <li><a class="texte" href="{{ path(('vehicule_index')) }}">VEHICULES</a></li><br>
            <li><a class="texte" href="{{ path(('agence_index')) }}">AGENCES</a></li><br>
            <li><a class="texte" href="{{ path(('app_login')) }}">MYCAAG</a></li><br>
            <li><a class="texte" href="{{ path(('reservation_new')) }}">PROMOS & ACTUS</a></li><br>
            <li class="panel-group" id="accordion" data-toggle="collapse" data-parent="#accordion" href="#collapse1">
                <div id="expand">
                    <div class="right-arrow pull-right">+</div>
                    <p><a class="texte" href="#!">SUPPORT CLIENT</a></p>
                    <div id="collapse1" class="panel-collapse collapse">
                        <ul>
                            <li><p><a class="texte2" href="#!">FAQ</a></p></li>
