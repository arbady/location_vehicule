{% extends 'base.html.twig' %}

{% block title %}Agence index{% endblock %}

{% block body %}
    <h1>Agence index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Code</th>
                <th>Adresse</th>
                <th>Aeroport</th>
                <th>Ville</th>
                <th>Code_postal</th>
                <th>Pays</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for agence in agences %}
            <tr>
                <td>{{ agence.id }}</td>
                <td>{{ agence.code }}</td>
                <td>{{ agence.adresse }}</td>
                <td>{{ agence.aeroport }}</td>
                <td>{{ agence.ville }}</td>
                <td>{{ agence.codePostal }}</td>
                <td>{{ agence.pays }}</td>
                <td>
                    <a href="{{ path('agence_show', {'id': agence.id}) }}">show</a>
                    <a href="{{ path('agence_edit', {'id': agence.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('agence_new') }}">Create new</a>
{% endblock %}
