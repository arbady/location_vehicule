    <script src="{{ asset('js/register.js') }}"></script>

    <link rel="stylesheet" type="text/css" href="{{asset('css/register.css')}}">

    <form class="login-form" method="post" action="{{ path('app_register') }}">
        <div class="modal-wrap">
            <div class="modal-header"><span class="is-active"></span><span></span><span></span></div>
            <div class="modal-bodies">
                <div class="modal-body modal-body-step-1 is-showing" style="margin-top: 0%; padding-bottom: 3%;">
                    <div class="title">Etape 1</div>
                    <div class="description">Salut, procédez par votre enregistrement !</div>
                        <div class="md-form">
                            <input type="text" name="nom" id="inputNom" class="custom-select-sm form-control" placeholder="Entrez votre nom" required autofocus>
                        </div>
                        <div class="md-form">
                            <input type="text" name="prenom" id="inputPrenom" class="custom-select-sm form-control" placeholder="Entrez votre prenom" required autofocus>
                        </div>
                        <div class="md-form">
                            <input type="email" name="email" id="inputEmail" class="custom-select-sm form-control" placeholder="Entrez votre email" required autofocus>
                        </div>
                        <div class="md-form">
                            <input type="password" name="password" id="inputPassword" class="custom-select-sm form-control" placeholder="Entrer votre mot de passe" required autofocus>
                        </div>
                        <div class="text-center">
                            <div class="button" style="margin-top: 5%">Commencer</div>
                        </div>
                </div>
                <div class="modal-body modal-body-step-2" style="margin-top: 0%; padding-bottom: 3%;">
                    <div class="title">Etape 2</div>
                    <div class="description">Allez, encore un petit effort !</div>
{#                        <select type="text" class="selectpicker form-control" multiple title="choisir le sexe" name="sexe" id="inputSexe" style="margin-left: 0%;" required autofocus>#}
