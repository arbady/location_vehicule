                        <select class="browser-default custom-select" name="sexe" id="inputSexe">
                            <option selected>Choisissez votre sexe</option>
                            <option value="M">Homme</option>
                            <option value="F">Femme</option>
                        </select>
                        <div class="md-form">
                            <input type="text" name="adresse" id="inputAdresse" class="form-control" placeholder="Tapez une adresse" style="margin-top: 5%" required autofocus>
                        </div>
                        <div class="md-form">
                            <input placeholder="Entrez votre date de naissance" style="width: 100%;" id="datepicker" type="text" class="custom-select-sm form-control datepicker1" name="date_naissance" required autofocus />
                        </div>
                        <div class="md-form">
                            <input type="number" name="tel" id="inputTel" class="form-control" placeholder="Entrez votre numéro de telephone" style="margin-top: 5%" required autofocus>
                        </div>
                        <div class="text-center fade-in" style="margin-top: 5%">
                            <div class="btn btn-primary previous action-button" value="Previous" style="background: #FF6F00 !important; color: white; width: 40%">
                                <a style="color: white" href="{{ path('app_register') }}">Précedent</a>
                            </div>
                            <div class="btn btn-primary next action-button button" style="background: #FF6F00 !important; color: white; width: 40%; padding: 5px 20px !important">Suivant</div>
                        </div>
                </div>
                <div class="modal-body modal-body-step-3">
                    <div class="title">Etape 3</div>
                    <div class="description">Et enfin ...</div>
                        <div class="md-form" style="margin-left: 10%">
{#                            <input class="datepicker form-control" placeholder="Date d'inscription" type="text" id="datepicker1" name="date_inscription" required autofocus>#}
                            <input placeholder="Entrez votre date d'inscription" style="width: 100%;" id="datepicker1" type="text" class="custom-select-sm form-control datepicker1" name="date_inscription" required autofocus />
                        </div>
                        <select class="selectpicker form-control" multiple data-actions-box="true" id="select" required autofocus>
                            <option type="checkbox" id="defaultUnchecked1" name="permisA">Permis A</option>
                            <option type="checkbox" id="defaultUnchecked2" name="permisB">Permis B</option>
                            <option type="checkbox" id="defaultUnchecked3" name="permisC">Permis C</option>
                            <option type="checkbox" id="defaultUnchecked4" name="permisE">Permis E</option>
                            <option type="checkbox" id="defaultUnchecked5" name="permisG">Permis G</option>
                        </select>
