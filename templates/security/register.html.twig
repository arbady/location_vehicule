                        <div class="text-center" style="margin-top: 10%">
                            <div class="btn btn-primary previous action-button" value="Previous" style="background: #FF6F00 !important; color: white; width: 40%">
                                <a style="color: white" href="{{ path('app_register') }}">Précédent</a>
                            </div>
                            <button class="btn btn-primary" type="submit" style="background: #FF6F00 !important; width: 45%; color: white">Valider</button>
                        </div>
                </div>
            </div>
        </div>
    </form>

{% endblock %}