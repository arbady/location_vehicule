    <style>
        #container {
            width: 100%;
            height: 100vh;
            margin-top: -15%;
            background: radial-gradient(
                    ellipse at center,
                    rgba(0, 0, 0, 0) 0%,
                    rgba(0, 0, 0, 0.46) 100%
            );
        }

        .texte {
            font-family: Helvetica;
            color: #fff;
            position: relative;
            top: 40%;
            left: 25%;
        }

        .rond, .rond2 {
            width: 75px;
            height: 75px;
            position: relative;
            left: 50%;
            top: 50%;
            transform: translate(-50%, -50%);
            border-radius: 50%;
            transition: all 0.3s;
            float: left;
            margin: 10px;
        }

        .rond2 {
            background-color: #c0392b;
        }
        .rond {
            background-color: #2980b9;
        }

        .rond:after, .rond2:after {
            content: '';
            width: 0px;
            height: 0px;
            background-color: #fff;
            position: absolute;
            top: 50%;
            border-radius: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            transition: all 0.3s;
            z-index: -1;
        }

        .rond:hover, .rond2:hover {
            width: 80px;
            height: 80px;
        }

        .rond:hover .texte {
            color: #3498db;
        }

        .rond2:hover .texte {
            color: #e74c3c;
        }

        .rond:hover.rond::after, .rond2:hover.rond2::after {
            width: 75px;
            height: 75px;
        }

    </style>

